<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_config_predictionsViewHolder2"
    android:layout_width="300dp"
    android:layout_height="200sp"
    android:layout_margin="5dp"
    android:background="@color/mainColor">


    <ImageView
        android:id="@+id/app_config_predictionsLocalTeamIV2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsLeagueIV2"
        app:srcCompat="@drawable/football" />

    <ImageView
        android:id="@+id/app_config_predictionsVisitorTeamIV2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/app_config_predictionsLocalTeamIV2"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsLocalTeamIV2"
        app:srcCompat="@drawable/football" />

    <TextView
        android:id="@+id/app_config_predictionsLocalTeamTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="home"
        android:layout_marginStart="16dp"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/app_config_predictionsLocalTeamIV2"
        app:layout_constraintStart_toEndOf="@+id/app_config_predictionsLocalTeamIV2"
        app:layout_constraintTop_toTopOf="@+id/app_config_predictionsLocalTeamIV2" />

    <TextView
        android:id="@+id/app_config_predictionsVisitorTeamTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="visitor"
        android:layout_marginStart="16dp"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/app_config_predictionsVisitorTeamIV2"
        app:layout_constraintStart_toEndOf="@+id/app_config_predictionsVisitorTeamIV2"
        app:layout_constraintTop_toTopOf="@+id/app_config_predictionsVisitorTeamIV2" />

    <ImageView
        android:id="@+id/app_config_VS2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/vs_pink"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/app_config_predictionsVisitorTeamIV2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/app_config_predictionsLocalTeamIV2" />

    <ImageView
        android:id="@+id/app_config_predictionsLeagueIV2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/football" />

    <TextView
        android:id="@+id/app_config_predictionsLeagueTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="league"
        android:textAlignment="textStart"
        android:textColor="@color/textColor"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/app_config_predictionsLeagueIV2"
        app:layout_constraintStart_toEndOf="@+id/app_config_predictionsLeagueIV2"
        app:layout_constraintTop_toTopOf="@+id/app_config_predictionsLeagueIV2" />

    <TextView
        android:id="@+id/app_config_predictionsTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prediction:"
        android:textAlignment="textStart"
        android:textColor="@color/textColor"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsVisitorTeamIV2" />

    <TextView
        android:id="@+id/app_config_predictTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsTextView2" />

</androidx.constraintlayout.widget.ConstraintLayout>