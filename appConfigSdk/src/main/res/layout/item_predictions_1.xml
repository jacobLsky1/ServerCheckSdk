<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_config_predictionsViewHolder1"
    android:layout_width="300dp"
    android:layout_height="200sp"
    android:layout_margin="5dp"
    android:background="@color/secondaryColor">


    <ImageView
        android:id="@+id/app_config_predictionsLocalTeamIV1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsScoreTV1"
        app:srcCompat="@drawable/football" />

    <ImageView
        android:id="@+id/app_config_predictionsVisitorTeamIV1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/football" />

    <TextView
        android:id="@+id/app_config_predictionsLocalTeamTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/app_config_predictionsLocalTeamIV1"
        app:layout_constraintEnd_toStartOf="@+id/app_config_predictionsVisitorTeamIV1"
        app:layout_constraintStart_toEndOf="@+id/app_config_predictionsLocalTeamIV1"
        app:layout_constraintTop_toTopOf="@+id/app_config_predictionsLocalTeamIV1" />

    <TextView
        android:id="@+id/app_config_predictionsVisitorTeamTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visitor"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/app_config_predictionsVisitorTeamIV1"
        app:layout_constraintEnd_toStartOf="@+id/app_config_predictionsVisitorTeamIV1"
        app:layout_constraintStart_toEndOf="@+id/app_config_predictionsLocalTeamIV1"
        app:layout_constraintTop_toTopOf="@+id/app_config_predictionsVisitorTeamIV1" />

    <TextView
        android:id="@+id/app_config_predictionsScoreTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="VS"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/app_config_predictionsVisitorTeamIV1"
        app:layout_constraintStart_toEndOf="@+id/app_config_predictionsLocalTeamIV1"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsVisitorTeamTV1" />

    <ImageView
        android:id="@+id/app_config_predictionsLeagueIV1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/football" />

    <TextView
        android:id="@+id/app_config_predictionsLeagueTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="league"
        android:textSize="10sp"
        android:textColor="@color/textColor"
        android:textAlignment="textStart"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/app_config_predictionsLeagueIV1"
        app:layout_constraintStart_toEndOf="@+id/app_config_predictionsLeagueIV1"
        app:layout_constraintTop_toTopOf="@+id/app_config_predictionsLeagueIV1" />

    <TextView
        android:id="@+id/app_config_predictionsTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prediction:"
        android:textColor="@color/textColor"
        android:textAlignment="textStart"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsLocalTeamIV1" />

    <TextView
        android:id="@+id/app_config_predictTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_config_predictionsTextView1" />

</androidx.constraintlayout.widget.ConstraintLayout>